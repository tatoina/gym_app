rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    
    // Regla para usuarios autenticados
    function isAuthenticated() {
      return request.auth != null;
    }
    
    // Regla para verificar si es el propietario del documento
    function isOwner(userId) {
      return request.auth.uid == userId;
    }
    
    // Regla para verificar si es el administrador
    function isAdmin() {
      return request.auth != null && request.auth.token.email == 'max@max.es';
    }
    
    // Colección de usuarios
    match /users/{userId} {
      allow read: if isAuthenticated();
      allow write: if isAuthenticated() && isOwner(userId);
    }
    
    // Colección de máquinas
    match /machines/{machineId} {
      allow read: if isAuthenticated();
      allow create: if isAuthenticated() && 
        (request.resource.data.userId == request.auth.uid || 
         (request.resource.data.isGlobal == true && isAdmin()));
      allow update, delete: if isAuthenticated() && 
        (resource.data.userId == request.auth.uid || 
         (resource.data.isGlobal == true && isAdmin()));
    }
    
    // Colección de entrenamientos
    match /workouts/{workoutId} {
      allow read: if isAuthenticated() && resource.data.userId == request.auth.uid;
      allow create: if isAuthenticated() && request.resource.data.userId == request.auth.uid;
      allow update, delete: if isAuthenticated() && resource.data.userId == request.auth.uid;
    }
    
    // Colección de tablas asignadas
    match /assignedTables/{tableId} {
      allow read: if isAuthenticated();
      allow create, update, delete: if isAuthenticated();
    }
    
    // Colección de posts (MAX SOCIAL)
    match /posts/{postId} {
      // Cualquier usuario autenticado puede leer todos los posts
      allow read: if isAuthenticated();
      
      // Cualquier usuario autenticado puede crear un post con su propio userId
      allow create: if isAuthenticated() && request.resource.data.userId == request.auth.uid;
      
      // Solo el propietario puede actualizar o eliminar su post
      allow update, delete: if isAuthenticated() && resource.data.userId == request.auth.uid;
    }
    
    // Colección de notificaciones
    match /notifications/{notificationId} {
      // Los usuarios pueden crear sus propias notificaciones
      allow create: if isAuthenticated();
      
      // Solo Max puede leer y actualizar notificaciones
      allow read, update, delete: if isAdmin();
    }
    
    // Colección de sugerencias
    match /suggestions/{suggestionId} {
      // Cualquier usuario autenticado puede crear sugerencias
      allow create: if isAuthenticated();
      
      // Solo el admin puede leer y actualizar sugerencias
      allow read, update, delete: if isAdmin();
    }
  }
}
