rules_version = '2';
service firebase.storage {
  match /b/{bucket}/o {
    
    // Regla para verificar autenticación
    function isAuthenticated() {
      return request.auth != null;
    }
    
    // Fotos de máquinas globales - cualquier usuario autenticado puede subir
    match /machines/global/{allPaths=**} {
      allow read: if isAuthenticated();
      allow write: if isAuthenticated();
    }
    
    // Fotos de máquinas de usuario - solo el usuario autenticado puede subir
    match /machines/{userId}/{allPaths=**} {
      allow read: if isAuthenticated();
      allow write: if isAuthenticated() && request.auth.uid == userId;
    }
    
    // Fotos de posts sociales - solo el usuario autenticado puede subir
    match /posts/{userId}/{allPaths=**} {
      allow read: if isAuthenticated();
      allow write: if isAuthenticated() && request.auth.uid == userId;
    }
  }
}
